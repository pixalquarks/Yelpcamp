<%- include('../partials/header') %>
<div class="container">
	<div class="row">
		<h1 style="text-align:center;">
			Edit <%= campground.name %>
		</h1>
		<div style="width: 30%; margin:30px auto;">
			<form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
				<div class="form-group"><input class="form-control" type="text" name="campground[name]" value="<%=campground.name%>"></div>
				<div class="form-group"><input class="form-control" type="text" name="campground[imgurl]" value="<%=campground.image%>"></div>
				<div class="form-group"><input class="form-control" type="number" name="campground[price]" value="<%=campground.price%>" min="1" step="0.1" required></div>
				<div class="form-group"><textarea style="width: 100%; height: 130px;" class="form-control" type="text" name="campground[description]"><%= campground.description%></textarea></div>
				<div class="form-group"><button class="btn btn-lg btn-success btn-block">Submit</button></div>
			</form>
			<a href="/campgrounds/<%=campground._id%>" style="text-align:center;">Go Back</a>
		</div>
		
	</div>
	
 
</div>


<%- include('../partials/footer') %>

